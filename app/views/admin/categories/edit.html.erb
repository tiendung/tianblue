<h1><%= @page_title %></h1>

<% proper_form_for :category, :url => admin_category_path(@category), :html => { :method => :put } do |f| -%>

<% fieldset do -%>
	<%= f.text_field :name %>
	<%= f.text_field :title %>
	<%= f.text_area :description %>
	<%= f.check_box :featured %>
<% end -%>

<% fieldset :class => "submit" do -%>
<%= f.submit "Update" %> | <%= link_to "back to categories list", admin_categories_path %>
<% end -%>

<% end -%>

<% content_for :sub do -%>
<h2>Image</h2>
<% if @image -%>
<ul class="images">
	<li>
		<img src="<%= @image.public_filename(:thumb) %>" alt="" />
		<%= button_to "Delete", admin_category_image_path(@category), :method => :delete %>
	</li>
</ul>
<% end -%>
<p><%= link_to "Add a new image", new_admin_category_image_path(@category) %></p>
<% end -%>