<h1><%=h @page_title %></h1>

<% proper_form_for :image, :url => admin_page_image_path(@page), :html => { :multipart => true } do |f| -%>

<% fieldset do -%>
<%= f.file_field :uploaded_data, :label => "Select Image" %>
<% end -%>

<% fieldset :class => "buttons" do -%>
<%= f.submit "Create" %> | <%= link_to "back to edit page", edit_admin_page_path(@page) %> | <%= link_to "back to pages list", admin_pages_path %>
<% end -%>

<% end -%>